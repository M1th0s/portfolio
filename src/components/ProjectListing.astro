---
import Image from 'astro/components/Image.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
    project: CollectionEntry<'projects'>;
}

const { project }: Props = Astro.props;

const { title, mainImage, client, work } = project.data;
---

<article class="project">
    <a class="image" href={`/projects/${project.id}`} aria-label= {title}>
        <Image width={500} height={500} src={mainImage} alt={title}/>
        </a>

    <a class="title" href={`/projects/${project.id}`} aria-label= {title}>
        <h3>{title}</h3>
        </a>

    <div class="details">
        <div class="flex">
            <p>Client:</p>
            <span>{client}</span>
        </div>

        <div class="flex">
            <p>work:</p>
            <span>{work}</span>
        </div>
    </div>
    </article>   

  <style>
  /* ==== Project Card ==== */
  .project:not(:last-child) {
    margin-bottom: 3rem;
  }

  /* ==== Imagen ==== */
  .image {
    width: 100%;
  }

  .project img {
    width: 100%;
    height: auto;
    margin-bottom: 1.5rem;
    border-radius: 0.5rem;
  }

  /* ==== TÃ­tulo ==== */
  .title {
    position: relative;
    display: inline-block;
    margin-bottom: 1rem;
    text-decoration: none;
    
  }

  .title h3 {
    color: var(--secondary-color-100);
    font-size: 1.25rem;
    transition: color 0.3s ease-in-out;
    
  }

  .title::after {
    content: '';
    position: absolute;
    top: -10px;
    right: 0;
    width: 100px;
    height: 4px;
    border-radius: .5rem;
    background-color: var(--primary-color-400);
    transition: transform 0.3s ease-in-out;
  }

  .title:hover h3 {
    color: var(--primary-color-400);
  }

  .title:hover::after {
    transform: translateY(-4px);
  }

  /* ==== Detalles ==== */
  .flex {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .flex:not(:last-child) {
    margin-bottom: 0.5rem;
  }

  .details p {
    color: var(--secondary-color-200);
    font-size: 0.8rem;
  }

  
</style>
